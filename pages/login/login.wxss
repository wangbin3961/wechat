.login-container {
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  box-sizing: border-box;
}

.logo {
  padding: 0;
  text-align: center;
}

.logo image {
  width: 300px;
  height: 216px;
}

.login-txt {
  background: #bfefff;
  text-align: center;
  color: #b2b2b2;
  padding: 15rpx;
  margin-bottom: 5rpx;
}

.login-btn {
  background: #337ab7;
  border: 0;
  color: #fff;
  margin: 50rpx 20rpx 20rpx;
}

.forget-reg {
  color: #337ab7;
  margin: 0 30rpx;
}

.reg {
  float: right;
}
