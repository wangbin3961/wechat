.login-container {
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  box-sizing: border-box;
}

.logo {
  padding: 20px 0;
  text-align: center;
}

.logo image {
  width: 300px;
  height: 216px;
}

.login-txt {
  background: #bfefff;
  font-size: 24rpx;
  text-align: center;
  color: #333;
  padding: 15rpx;
  margin-bottom: 5rpx;
}

.login-btn {
  background: #337ab7;
  border: 0;
  color: #fff;
  font-size: 24rpx;
  padding: 15rpx;
  margin: 100rpx 20rpx 20rpx 20rpx;
}

.forget-reg {
  font-size: 24rpx;
  color: #337ab7;
  margin: 0 30rpx;
}

.reg {
  float: right;
}
