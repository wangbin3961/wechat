<view class="login-container">
  <form bindsubmit="login" bindreset="formReset">
    <view class="login">
      <view class="logo">
        <image src="../../images/logo.png"></image>
      </view>
      <view class="login-form">
        <input placeholder="请输入用户名/手机号码" auto-focus class="login-txt" name="username"/>
        <input placeholder="请输入密码" password="true" class="login-txt" name="password"/>
        <button class="login-btn" formType="submit" open-type="getUserInfo" >登录</button>
      </view>
      <view class="forget-reg">
        <text class="forget smaller">忘记密码</text>
        <text class="reg smaller" bindtap="bindRegisterTap">注册</text>
      </view>
    </view>
  </form>

</view>