<view class="login-container">
  <view class="login">
    <view class="logo">
      <image src="../../images/logo.png"></image>
    </view>
    <view class="login-form">
      <input placeholder="请输入用户名/手机号码/邮箱" auto-focus class="login-txt" />
      <input placeholder="请输入密码" class="login-txt" />
      <button class="login-btn" bindtap="bindLoginTap">登 录</button>
    </view>
    <view class="forget-reg">
      <text class="forget smaller">忘记密码</text>
      <text class="reg smaller" bindtap="bindRegisterTap">注册</text>
    </view>
  </view>
</view>