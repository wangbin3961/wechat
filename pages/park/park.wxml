<!--park.wxml-->
<view class="park">
  <!-- 停车场地图 -->
  <view class="map" wx:if="{{rendered}}">
    <map id="park_map" longitude="{{longitude}}" latitude="{{latitude}}" scale="14" controls="{{controls}}" markers="{{markers}}" bindmarkertap="bindMarkerTap" bindcallouttap="bindCalloutTap" polyline="{{polyline}}" circles="{{circles}}" bindregionchange="regionchange"
      show-location style="width: 100%; height: 100%;">

      <!-- 搜索-->
      <cover-view class="search" hover-class="search-hover" bindtap="bindSearchTap">
        <cover-image class="icon" src="img/search.png" />
        <cover-view class="text">请输入您的目的地</cover-view>
        <cover-image class="voice" src="img/voice.png" />
      </cover-view>

      <!-- 回到当前位置按钮-->
      <cover-view class="controls" hover-class="controls-hover" bindtap="bindControlTap" hover-stay-time="100">
        <cover-image class="img" src="img/location.png" />
      </cover-view>

    </map>
  </view>

  <!-- 停车场列表 -->
  <view class="parklist" bindtap='bindViewMoreTap'>
    <view class='title'>
      <icon type="search" size="16" />
      <text>点击查看更多停车场</text>
    </view>

  </view>
  <view class="items" style="display:{{showItems}}">
    <view class="park-item" wx:for="{{parklist}}" wx:for-item="item">
      <text>{{item.name}}</text>
    </view>
  </view>

</view>