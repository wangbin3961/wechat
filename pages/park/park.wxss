.park {
  position: fixed;
  height: 100%;
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center; /*垂直居中*/
  justify-content: center; /*水平居中*/
}

.map {
  flex-grow: 1;
  height: 100px;
  width: 100%;
}

.controls {
  position: relative;
  top: 85%;
  height: 32px;
  width: 32px;
  margin-left: 20rpx;
  background-color: #fff;
  border-radius: 2px;
  box-shadow: 1px 1px #eee;
  display: flex;
  align-items: center; /*垂直居中*/
  justify-content: center;
}

.controls .img {
  display: block;
  height: 24px;
  width: 24px;
}

.controls-hover {
  background-color: #eee;
}

.search {
  position: relative;
  top: 20px;
  height: 30pt;
  width: 90%;
  margin: 0 auto;
  background-color: #fff;
  border-radius: 3pt;
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-shadow: 1px 1px 1px 1px #eee;
}

.search .icon {
  width: 21px;
  height: 21px;
  padding-left: 18px;
}

.search .text {
  width: 70%;
  height: 35px;
  line-height: 35px;
}

.search .voice {
  width: 21px;
  height: 21px;
  padding-right: 10px;
}

.parklist {
  height: 35px;
  width: 100%;
  flex-grow: 0;
  display: flex;
  flex-direction: column;
  align-items: center; /*垂直居中*/
  justify-content: center; /*水平居中*/
  border-bottom: 1px solid #eee;
}

.parklist .title {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.parklist .title text {
  padding: 0 0 0 5px;
}

.items {
  /* height: 50%; */
  width: 100%;
  display: flex;
  flex-direction: column;
}

.park-item {
  display: flex;
  border-bottom: 1px solid #eee;
  align-items: center; /*垂直居中*/
  justify-content: space-between;
  padding: 5px 15px;
}

.park-item-text {
  width: 65%;
  height: 80px;
  justify-content: space-around;
}

.park-item button {
  border-radius: 15pt;
  width: 80px;
  height: 30pt;
  line-height: 30pt;
  padding: 0;
  background-color: #1296db;
  color: #fff;
}

.items .tobottom {
  height: 45px;
  line-height: 45px;
  text-align: center;
  color: #c9c9c9;
}

.order {
  position: relative;
  top: 65%;
  left: 630rpx;
  height: 40px;
  width: 40px;
  display: flex;
  background-color: #fff;
  border-radius: 50%;
  box-shadow: 1px 1px #eee;
  align-items: center; /*垂直居中*/
  justify-content: center;
}

.order-hover {
  background-color: #eee;
}

.order .img {
  display: block;
  height: 24px;
  width: 24px;
}

.pay {
  position: relative;
  top: 67%;
  left: 630rpx;
  height: 40px;
  width: 40px;
  display: flex;
  background-color: #fff;
  border-radius: 50%;
  box-shadow: 1px 1px #eee;
  align-items: center; /*垂直居中*/
  justify-content: center;
}

.pay .img {
  display: block;
  height: 24px;
  width: 24px;
}

.pay-hover {
  background-color: #eee;
}
