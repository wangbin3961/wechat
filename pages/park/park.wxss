.park {
  position: fixed;
  height: 100%;
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center; /*垂直居中*/
  justify-content: center; /*水平居中*/
}

.map {
  flex-grow: 1;
  height: 100px;
  width: 100%;
}

.controls {
  position: relative;
  top: 85%;
  height: 32px;
  width: 32px;
  margin-left: 20rpx;
  display: flex;
  background-color: #fff;
  border-radius: 2px;
  box-shadow: 1rpx 1rpx #eee;
}

.controls-hover {
  background-color: #eee;
}

.search {
  position: relative;
  top: 3%;
  height: 35px;
  width: 90%;
  margin: 0 auto;
  background-color: #fff;
  border-radius: 2px;
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-shadow: 1rpx 1rpx 1rpx 1rpx #eee;
}

.search .icon {
  width: 21px;
  height: 21px;
  padding-left: 18px;
}

.search .text {
  width: 70%;
  height: 35px;
  line-height: 35px;
  font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
  font-size: small;
  color: #c9c9c9;
  word-spacing: normal;
  letter-spacing: 1px;
}

.search .voice {
  width: 21px;
  height: 21px;
  padding-right: 10px;
}

.parklist {
  height: 30px;
  width: 100%;
  flex-grow: 0;
  display: flex;
  flex-direction: column;
  align-items: center; /*垂直居中*/
  justify-content: center; /*水平居中*/
}

.parklist .title {
  font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
  font-size: small;
  color: #333;
  word-spacing: normal;
  letter-spacing: 1px;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.items {
  height: 20px;
  width: 100%;
  display: flex;
  flex-direction: column;
}

.park-item {
  height: 35px;
  width: 100%;
  display: flex;
  align-items: center; /*垂直居中*/
}

.park-item text {
  font-size: small;
}
