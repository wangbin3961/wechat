.park {
  position: fixed;
  height: 100%;
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center; /*垂直居中*/
  justify-content: center; /*水平居中*/
}

.map {
  flex-grow: 1;
  height: 100px;
  width: 100%;
}

.controls {
  position: relative;
  top: 85%;
  height: 32px;
  width: 32px;
  margin-left: 20rpx;
  display: flex;
  background-color: #fff;
  border-radius: 2px;
  box-shadow: 1px 1px #eee;
}

.controls-hover {
  background-color: #eee;
}

.search {
  position: relative;
  top: 3%;
  height: 35px;
  width: 90%;
  margin: 0 auto;
  background-color: #fff;
  border-radius: 2px;
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-shadow: 1px 1px 1px 1px #eee;
}

.search .icon {
  width: 21px;
  height: 21px;
  padding-left: 18px;
}

.search .text {
  width: 70%;
  height: 35px;
  line-height: 35px;
  font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
  font-size: small;
  color: #c9c9c9;
  word-spacing: normal;
  letter-spacing: 1px;
}

.search .voice {
  width: 21px;
  height: 21px;
  padding-right: 10px;
}

.parklist {
  height: 35px;
  width: 100%;
  flex-grow: 0;
  display: flex;
  flex-direction: column;
  align-items: center; /*垂直居中*/
  justify-content: center; /*水平居中*/
}

.parklist .title {
  font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
  font-size: small;
  color: #333;
  word-spacing: normal;
  letter-spacing: 1px;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.items {
  height: 80px;
  width: 100%;
  display: flex;
  flex-direction: column;
}

.park-item {
  height: 40px;
  width: 100%;
  display: flex;
  border-bottom: 1px solid #e9e9e9;
  align-items: center; /*垂直居中*/
  justify-content: space-between;
}

.park-item text {
  font-size: small;
  width: 60%;
  height: 30px;
  line-height: 30px;
  padding: 0 10px;
}

.park-item button {
  font-size: small;
  border-radius: 2px;
  width: 60px;
  height: 30px;
  line-height: 30px;
  padding: 0;
  background-color: #1296db;
  color: #fff;
}

.items .tobottom {
  font-size: small;
  height: 35px;
  line-height: 35px;
  text-align: center;
  color: #c9c9c9;
}

.order {
  position: relative;
  top: 65%;
  left: 630rpx;
  height: 40px;
  width: 40px;
  display: flex;
  background-color: #fff;
  border-radius: 50%;
  box-shadow: 1px 1px #eee;
  align-items: center; /*垂直居中*/
  justify-content: center;
}

.order-hover {
  background-color: #eee;
}

.order .img {
  display: block;
  height: 28px;
  width: 28px;
}

.pay {
  position: relative;
  top: 67%;
  left: 630rpx;
  height: 40px;
  width: 40px;
  display: flex;
  background-color: #fff;
  border-radius: 50%;
  box-shadow: 1px 1px #eee;
  align-items: center; /*垂直居中*/
  justify-content: center;
}

.pay .img {
  display: block;
  height: 24px;
  width: 24px;
}

.pay-hover {
  background-color: #eee;
}

